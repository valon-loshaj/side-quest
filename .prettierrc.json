{
	"$schema": "http://json.schemastore.org/prettierrc",
	"semi": true,
	"trailingComma": "es5",
	"singleQuote": false,
	"tabWidth": 2,
	"useTabs": true,
	"printWidth": 80,
	"overrides": [
		{
			"files": ["*.yaml", "*.yml", ".nvmrc"],
			"options": {
				"parser": "yaml"
			}
		}
	],
	"plugins": [
		"prettier-plugin-curly",
		"prettier-plugin-sh",
		"prettier-plugin-packagejson"
	]
}
